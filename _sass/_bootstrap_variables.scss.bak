/*-----Theme colors-----*/
$white: #fff;
$primary: #023452;
$secondary: #5696d0;
$blue: #277ab9;
$light: #f3f3f3;
$dark: #424242;
$color-gradient: linear-gradient(90deg, $primary 18%, $secondary);

/*-----Custom values for Bootstrap variables-----*/
$component-active-bg: $primary;
$box-shadow: rgba(0, 0, 0, 0.19) 0px 3px 8px;
$navbar-dark-toggler-border-color: transparent;
$navbar-light-color: $dark;
$navbar-light-hover-color: $primary;
$nav-link-hover-color: $primary;
$navbar-brand-font-size: 1.7rem;
$card-border-width: 0;
$card-cap-bg: $light;
$input-group-addon-bg: $light;
$link-color: $blue;
$link-decoration: none;
$body-bg: $white;
$body-color: $dark;
$font-family-sans-serif: 'IBM Plex Sans', sans-serif;
$h1-font-size: 1rem * 4 !default;
$h3-font-size: 1rem * 1.5 !default;
$h4-font-size: 1rem * 1.1 !default;
$h5-font-size: 1rem !default;
$h6-font-size: 1rem !default;
